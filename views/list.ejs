<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Todo List</title>
  <link rel="stylesheet" href="/css/style.css">
</head>

<body>
  <div class="box">
    <h1>Smrart Task Scheduler</h1>
   
    <!-- Server-side rendered tasks  -->
   <% ejes.forEach(function(items,i) { %>
      <form action="/delete" method="post">
        <div class="item">
          <input type="checkbox" name="checkbox1" value="<%= items._id %>" onchange="this.form.submit()">
          <p><%= ejes[i].name %></p>
        </div>
      </form>
    <% }) %>


    <!-- Form to submit a new task -->
    <form action="/" method="post">
      <input type="text" name="ele1" placeholder="Enter a new task">
      <button type="submit">+</button>
    </form>
  </div>
</body>

</html>
